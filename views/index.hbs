
<div class="container">
    <div id="chatContainer" class="box">
        <strong>Chat</strong>
        <div id="chatJoin">
            <div>Set Username:</div>
            <input type="text" id="chatUsername">
            <button id="chatJoinButton">Join Chat</button>
        </div>
        <div id="chatInner" style="display: none;">
            <div id="chat"></div>
            <div id="chatEntryBox">
                <input type="text" id="chatEntry">
            </div>
        </div>
    </div>
    <canvas id="game"></canvas>
    <div id="controls">
        <div class="box constructModeOnly" id="debugBox">
            <strong>DEBUG</strong>
            <div>
                <button id="lazyTop">Premade map (top)</button>
                <br>
                <button id="lazyBottom">Premade map (bottom)</button>
            </div>
        </div>
        <div class="box constructModeOnly" id="towerBox">
            <strong>Place Tower Type:</strong>
            <br>
            <span id="money">Money: 0</span>
            <div id="towerTypes">
                <strong>Loading...</strong>
            </div>
        </div>
        <div class="box constructModeOnly" id="unitBox">
            <strong>Send Units</strong>
            <div id="unitTypes">
                <strong>Loading...</strong>
            </div>
        </div>
        <div class="box constructModeOnly" id="readyBox">
            <div>
                <button id="readyButton">Done Turn</button>
            </div>
        </div>
        <div class="box" id="selectionBox">
            <strong>Current Selection</strong>
            <div id="selection">
                <strong>Stats</strong>
                <div id="towerStats">
                    <span>No Selection</span>
                </div>
                <strong>Target Style</strong>
                <form id="targetStyles" action="javascript: void(0)">
                </form>
                <button id="upgradeTower">Upgrade [todo]</button>
                <button id="destroyTower">Destroy</button>
            </div>
        </div>
        <div class="box" id="nextWaveBox">
            <strong>Next Wave</strong>
            <div id="unitQueue">
                <strong>TODO</strong>
            </div>
        </div>
        <div class="box" id="scoresBox">
            <strong>Scores</strong>
            <div id="scores">
                <strong>TODO</strong>
            </div>
        </div>
    </div>
</div>
<script src="/javascripts/game.js"></script>
<script src="/javascripts/drawing.js"></script>
<script src="/javascripts/interface.js"></script>
<script src="/javascripts/client.js"></script>
